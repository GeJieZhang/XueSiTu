<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/scrollView"
    android:background="@color/white"
    android:orientation="vertical">

    <com.lib.fastkit.views.load_state_view.MultiStateView

        android:id="@+id/state_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/m_empty_view"
        app:errorView="@layout/m_error_view"
        app:loadingView="@layout/m_loading_view"
        app:networkErrorView="@layout/m_net_error_view"
        app:viewState="content">

        <com.lib.fastkit.views.spring_refresh.widget.SpringView
            android:id="@+id/springView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView style="@style/scrollView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--实时排行-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="1">

                            <com.lib.fastkit.views.progress.circle_progress.CircleProgress
                                android:id="@+id/circle_progress_bar2"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginTop="10dp"
                                android:padding="4dp"
                                app:antiAlias="true"

                                app:arcColor1="#ffe000"
                                app:arcColor2="#ff4663"
                                app:arcColor3="#64ff1f"
                                app:arcWidth="16dp"
                                app:bgArcColor="#eae8e8"
                                app:bgArcWidth="16dp"
                                app:hint="累计可分享"
                                app:hintSize="15sp"
                                app:maxValue="10000"
                                app:startAngle="175"
                                app:sweepAngle="185"
                                app:unit="元"
                                app:unitColor="#ff4663"
                                app:unitSize="15sp"
                                app:value="100"
                                app:valueColor="#ff4663"
                                app:valueSize="15sp" />


                        </FrameLayout>


                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.lib.view.player.MyJzvdStd
                                    android:id="@+id/jz_player"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </FrameLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/line_dotted"></View>
                    <!--列表-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_paihang"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="8dp"
                            android:background="@mipmap/rank_bg"
                            android:text="实时排行"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:id="@+id/lin_message"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="vertical">

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/line_dotted"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="首次免费"
                            android:textColor="@color/base_title" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/line_dotted"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="24dp"
                        android:paddingTop="24dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_camera"
                                android:layout_width="65dp"
                                android:layout_height="55dp"
                                android:background="@mipmap/icon_camera_3" />

                            <TextView
                                style="@style/text_style2"
                                android:layout_marginTop="4dp"
                                android:text="拍照"
                                android:textSize="16sp"
                                android:textStyle="normal"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_voice"
                                android:layout_width="65dp"
                                android:layout_height="55dp"
                                android:background="@mipmap/icon_voice_3" />

                            <TextView
                                style="@style/text_style2"
                                android:layout_marginTop="4dp"
                                android:text="语音"
                                android:textSize="16sp"
                                android:textStyle="normal"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_write"
                                android:layout_width="65dp"
                                android:layout_height="55dp"

                                android:background="@mipmap/icon_write_3" />

                            <TextView
                                style="@style/text_style2"
                                android:layout_marginTop="4dp"
                                android:text="文字"
                                android:textSize="16sp"
                                android:textStyle="normal"

                                />
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        style="@style/text_style2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="知识提升"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <com.dayi.view.MarkButton
                            android:id="@+id/btn_fun"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            app:mValue="200兔币"
                            app:markBackground="@mipmap/t1"
                            app:textMarginBottom="2dp"
                            app:textMarginRight="2dp">

                        </com.dayi.view.MarkButton>

                        <com.dayi.view.MarkButton
                            android:id="@+id/btn_difficult"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            app:mValue="200兔币"
                            app:markBackground="@mipmap/t2"
                            app:textMarginBottom="2dp"
                            app:textMarginRight="2dp">

                        </com.dayi.view.MarkButton>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="16dp"

                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.dayi.view.MarkButton
                                android:id="@+id/btn_paper"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:mValue="60兔币"
                                app:markBackground="@mipmap/t3"
                                app:textMarginBottom="2dp"
                                app:textMarginRight="2dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.dayi.view.MarkButton
                                android:id="@+id/btn_analysis"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:mValue="100兔币"
                                app:markBackground="@mipmap/t4"

                                app:textMarginBottom="2dp"
                                app:textMarginRight="2dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.dayi.view.MarkButton
                                android:id="@+id/btn_mistake"
                                android:layout_width="100dp"
                                android:layout_height="100dp"

                                app:markBackground="@mipmap/t5"

                                app:textMarginBottom="2dp"
                                app:textMarginRight="2dp"
                                app:textShow="false" />


                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        style="@style/text_style2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="教育搜索"

                        />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="bottom"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"

                            >

                            <LinearLayout
                                android:id="@+id/lin_search"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_circle_gray_r30_1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="4dp"
                                android:paddingTop="4dp">

                                <!--<EditText-->
                                <!--style="@style/edit_text1"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_marginLeft="16dp"-->
                                <!--android:layout_weight="1"-->
                                <!--android:cursorVisible="false"-->
                                <!--android:focusable="false"-->
                                <!--android:focusableInTouchMode="false"-->
                                <!--android:hint="独创教育垂直搜索:搜本地报告/资讯/政策"-->
                                <!--android:maxLines="1"-->
                                <!--android:textSize="12sp" />-->

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:enabled="true"
                                    android:singleLine="true"
                                    android:text="独创教育垂直搜索:搜本地报告/资讯/政策"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:background="@mipmap/icon_search" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right|top"
                            android:layout_marginRight="16dp"
                            android:background="@mipmap/news_bg"
                            android:elevation="10dp"

                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_share_money"
                                style="@style/text_style3"
                                android:layout_marginTop="12dp"
                                android:text="分享兔讯得10兔币"
                                android:textColor="@color/white"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/lin_tuijian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:minHeight="100dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_tuXun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:minHeight="100dp"
                        android:orientation="vertical">

                    </LinearLayout>
                    <!--更多-->
                    <LinearLayout
                        android:id="@+id/lin_more1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_style3"
                            android:text="更多"

                            />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="4dp"
                            android:background="@mipmap/icon_more_2" />

                    </LinearLayout>

                    <TextView
                        style="@style/text_style2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="名师专栏" />

                    <com.lib.view.banner.MyBannerView
                        android:id="@+id/myBanner2"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="24dp"></com.lib.view.banner.MyBannerView>


                    <TextView
                        style="@style/text_style2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="公开课" />

                    <com.lib.view.banner.MyBannerView
                        android:id="@+id/myBanner"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="24dp"></com.lib.view.banner.MyBannerView>

                    <LinearLayout
                        android:id="@+id/lin_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                    </LinearLayout>
                    <!--更多-->
                    <LinearLayout
                        android:id="@+id/lin_more2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="32dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_style3"
                            android:text="更多"

                            />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="4dp"
                            android:background="@mipmap/icon_more_2" />

                    </LinearLayout>


                    <TextView

                        style="@style/text_style4"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="~我也是有底线的！~"
                        android:textSize="14sp"

                        />

                </LinearLayout>
            </ScrollView>
        </com.lib.fastkit.views.spring_refresh.widget.SpringView>
    </com.lib.fastkit.views.load_state_view.MultiStateView>
</LinearLayout>