<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_gif"
                    android:layout_width="220dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp" />

                <TextView
                    style="@style/text_style16"

                    android:text="您的提问已成功发出"

                    />

                <TextView
                    android:id="@+id/tv_cut_time"
                    style="@style/text_style16"
                    android:layout_marginTop="4dp"
                    android:text="等待老师抢单09:56"
                    android:textSize="14sp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_back"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/bg_circle_hollow_r6"
                        android:text="历史问答"
                        android:textColor="@color/base_title"

                        />

                    <Button
                        android:id="@+id/btn_share"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bg_circle_hollow_r6"
                        android:text="去纷享圈了解更多"
                        android:textColor="@color/base_title"

                        />

                </LinearLayout>

            </LinearLayout>


            <TextView
                style="@style/text_style16"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                android:text="精选推荐"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                style="@style/text_style16"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="单体讲解配上辅导资料，举一反三快速掌握！"
                android:textSize="14sp"

                />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView>


            <TextView

                style="@style/text_style4"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="~我也是有底线的！~"
                android:textSize="14sp"

                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>