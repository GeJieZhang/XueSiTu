<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:gravity="center"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="24dp"
                android:src="@mipmap/icon_rabbit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style5"
                    android:layout_gravity="bottom"
                    android:text="当前可用兔币"
                    android:textColor="@color/base_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/text_style5"
                    android:layout_gravity="bottom"
                    android:text="2500"
                    android:textColor="@color/base_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_recharge"
                    style="@style/text_style5"
                    android:visibility="gone"
                    android:layout_gravity="bottom"
                    android:text="@string/recharge"
                    android:textColor="@color/base_title"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style5"
                    android:layout_gravity="bottom"
                    android:text="本次将消耗"
                    android:textColor="@color/base_title"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_cut_money"
                    style="@style/text_style5"
                    android:layout_gravity="bottom"
                    android:text="10兔币"
                    android:textColor="@color/base_money"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_circle_gray_r5"
                    android:text="取消"
                    android:textColor="@color/base_title"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_sure"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/circle_button_blue_r5"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>