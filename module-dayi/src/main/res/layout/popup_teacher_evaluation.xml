<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:gravity="center"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                style="@style/text_style11"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="请对老师做出评价"
                android:textColor="@color/base_title"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                style="@style/text_style11"
                android:layout_marginTop="24dp"
                android:text="1.回答准确吗?"
                android:textColor="@color/base_title"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_vedio" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_vedio" />
            </LinearLayout>


            <TextView
                style="@style/text_style11"
                android:layout_marginTop="24dp"
                android:text="2.喜欢老师的讲解么?"

                android:textColor="@color/base_title"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_vedio" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_vedio" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_sure"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:background="@drawable/circle_button_blue_r5"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <TextView
                style="@style/text_style11"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="24dp"
                android:text="投诉老师"
                android:textColor="@color/base_title"
                android:textSize="14sp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>