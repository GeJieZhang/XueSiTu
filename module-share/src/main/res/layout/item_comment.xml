<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">
    <!--通用头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal">

        <com.lib.fastkit.views.circle_image.niv.NiceImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/test1"
            app:is_circle="true" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_style11"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="答疑同学"
            android:textColor="@color/base_title"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lin_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_zan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_love_default" />

            <TextView
                android:id="@+id/tv_zan"
                style="@style/text_style5"
                android:layout_marginLeft="8dp"
                android:text="227"
                android:textColor="@color/base_gray"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!--小内容-->
    <TextView
        android:id="@+id/tv_content_text2"
        style="@style/text_style11"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="0dp"
        android:singleLine="false"
        android:text="每节课中总有几个调皮得学生，不认真听讲sdfdsfsdfsdfsdfsdfsdfdsfsfs"
        android:textColor="@color/base_gray"
        android:textSize="12sp"
        android:textStyle="normal" />

</LinearLayout>