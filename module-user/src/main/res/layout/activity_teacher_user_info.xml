<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView style="@style/scrollView">

        <LinearLayout
            android:id="@+id/lin_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_white"
            android:orientation="vertical">


            <!--头像-->
            <LinearLayout
                android:id="@+id/lin_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"

                    android:minHeight="45dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_style7"
                        android:layout_weight="1"
                        android:text="头像" />


                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp" />

                    <ImageView style="@style/image1" />

                </LinearLayout>

                <View
                    style="@style/line_dotted"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>
            <!--昵称-->
            <LinearLayout
                android:id="@+id/lin_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_style7"
                        android:layout_weight="1"
                        android:text="昵称" />

                    <TextView
                        android:id="@+id/tv_nickname"
                        style="@style/text_style7"
                        android:text="高中英语"
                        android:textColor="@color/base_text1"

                        />

                    <ImageView style="@style/image1" />

                </LinearLayout>

                <View
                    style="@style/line_dotted"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>
            <!--性别-->
            <LinearLayout
                android:id="@+id/lin_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_style7"
                        android:layout_weight="1"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/tv_sex"
                        style="@style/text_style7"
                        android:text="未填写"
                        android:textColor="@color/base_text1"

                        />

                    <ImageView style="@style/image1" />

                </LinearLayout>

                <View
                    style="@style/line_dotted"
                    android:layout_marginBottom="4dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <!--教师审核信息-->
            <LinearLayout
                android:id="@+id/lin_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--身份证-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:text="请上传身份证" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"

                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp">

                                <FrameLayout
                                    android:id="@+id/f_id_z"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/iv_id_z"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_g10"
                                        android:scaleType="centerCrop" />

                                    <TextView
                                        android:id="@+id/tv_id_z"
                                        style="@style/text_style9"
                                        android:layout_gravity="center"
                                        android:text="正面" />


                                </FrameLayout>
                            </android.support.v7.widget.CardView>

                            <View
                                android:layout_width="4dp"
                                android:layout_height="match_parent" />

                            <android.support.v7.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:layout_weight="1"

                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp">

                                <FrameLayout
                                    android:id="@+id/f_id_f"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/iv_id_f"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_g10"
                                        android:scaleType="centerCrop" />

                                    <TextView
                                        android:id="@+id/tv_id_f"
                                        style="@style/text_style9"
                                        android:layout_gravity="center"
                                        android:text="反面" />


                                </FrameLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
                <!--教师资格证-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:text="请上传教师资格证" />

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"

                            android:orientation="horizontal">

                            <FrameLayout
                                android:id="@+id/f_certificate"
                                android:layout_width="wrap_content"
                                android:layout_height="110dp"
                                android:layout_weight="1">

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/iv_certificate"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_g10"
                                        android:scaleType="centerCrop" />
                                </android.support.v7.widget.CardView>

                                <TextView
                                    android:id="@+id/tv_certificate"
                                    style="@style/text_style9"
                                    android:layout_gravity="center"
                                    android:text="正面" />


                            </FrameLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
                <!--自我介绍视频-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:text="请上传自我介绍视频" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"

                            android:orientation="horizontal">

                            <FrameLayout
                                android:id="@+id/f_video"
                                android:layout_width="wrap_content"
                                android:layout_height="110dp"
                                android:layout_weight="1">

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/iv_video"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_g10"
                                        android:scaleType="centerCrop" />
                                </android.support.v7.widget.CardView>

                                <TextView
                                    android:id="@+id/tv_video"
                                    style="@style/text_style9"
                                    android:layout_gravity="center"
                                    android:text="30s以内" />


                            </FrameLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="16dp"
                        android:visibility="invisible" />
                </LinearLayout>
                <!--学校-->
                <LinearLayout
                    android:id="@+id/lin_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:layout_weight="1"
                            android:text="学校" />

                        <TextView
                            android:id="@+id/tv_shool"
                            style="@style/text_style7"
                            android:text="上海复旦"
                            android:textColor="@color/base_text1"

                            />

                        <ImageView style="@style/image1" />

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
                <!--教龄-->
                <LinearLayout
                    android:id="@+id/lin_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:layout_weight="1"
                            android:text="教龄" />

                        <TextView
                            android:id="@+id/tv_age"
                            style="@style/text_style7"
                            android:text="20年"
                            android:textColor="@color/base_text1"

                            />

                        <ImageView style="@style/image1" />

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
                <!--城市-->
                <LinearLayout
                    android:id="@+id/lin_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:layout_weight="1"
                            android:text="城市" />

                        <TextView
                            android:id="@+id/tv_city"
                            style="@style/text_style7"
                            android:text="上海"
                            android:textColor="@color/base_text1"

                            />

                        <ImageView style="@style/image1" />

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
                <!--教学经历-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:text="教学经历" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"

                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_button_g10"
                                android:minHeight="110dp">

                                <EditText
                                    android:id="@+id/et_experience"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:gravity="left|top"
                                    android:hint="500字以内"
                                    android:maxEms="500"
                                    android:minLines="4"
                                    android:padding="8dp"
                                    android:textColor="@color/base_title"
                                    android:textSize="14sp" />


                            </FrameLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_size"
                        style="@style/text_style7"
                        android:layout_width="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:text="0/500"
                        android:textColor="@color/base_text1" />


                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_tips"
                            style="@style/text_style7"
                            android:layout_width="match_parent"
                            android:text="全部信息提交审核通过后,即可认证成功。"
                            android:textColor="@color/base_text1" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_sure"
                style="@style/button1"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/circle_button_blue_r10"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="180dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>