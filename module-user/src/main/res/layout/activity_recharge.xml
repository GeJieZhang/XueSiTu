<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical">

    <com.lib.fastkit.views.load_state_view.MultiStateView

        android:id="@+id/state_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/m_empty_view"
        app:errorView="@layout/m_error_view"
        app:loadingView="@layout/m_loading_view"
        app:networkErrorView="@layout/m_net_error_view"
        app:viewState="content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style2"
                    android:layout_weight="1"
                    android:text="我的兔币" />

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/text_style2"
                    android:text="258兔币"
                    android:textColor="@color/base_money" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView

                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                style="@style/text_style2"
                android:layout_marginTop="32dp"
                android:text="支付方式" />

            <LinearLayout
                android:id="@+id/lin_wei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"

                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/icon_wechat" />

                    <TextView
                        style="@style/text_style7"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="微信支付" />

                    <ImageView
                        android:id="@+id/iv_wei"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_choose" />

                </LinearLayout>


            </LinearLayout>

            <View
                style="@style/line_dotted"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/lin_zhifu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/icon_alipay" />

                    <TextView
                        style="@style/text_style7"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="支付宝支付" />

                    <ImageView
                        android:id="@+id/iv_zhifu"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_default" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <Button
                android:id="@+id/btn_recharge"
                style="@style/button1"
                android:layout_height="44dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="32dp"

                android:layout_marginTop="40dp"
                android:background="@drawable/bg_circle_red_r10_1"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </com.lib.fastkit.views.load_state_view.MultiStateView>

</LinearLayout>