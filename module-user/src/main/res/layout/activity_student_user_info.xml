<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView style="@style/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_white"
            android:orientation="vertical">


            <!--头像-->
            <LinearLayout
                android:id="@+id/lin_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"

                    android:minHeight="45dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_style7"
                        android:layout_weight="1"
                        android:text="头像" />


                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@mipmap/ic_head" />

                    <ImageView style="@style/image1" />

                </LinearLayout>

                <View
                    style="@style/line_dotted"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>
            <!--昵称-->
            <LinearLayout
                android:id="@+id/lin_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_style7"
                        android:layout_weight="1"
                        android:text="昵称" />

                    <TextView
                        android:id="@+id/tv_nickname"
                        style="@style/text_style7"
                        android:text="高中英语"
                        android:textColor="@color/base_text1"

                        />

                    <ImageView style="@style/image1" />

                </LinearLayout>

                <View
                    style="@style/line_dotted"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>
            <!--性别-->
            <LinearLayout
                android:id="@+id/lin_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_style7"
                        android:layout_weight="1"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/tv_sex"
                        style="@style/text_style7"
                        android:text="未填写"
                        android:textColor="@color/base_text1"

                        />

                    <ImageView style="@style/image1" />

                </LinearLayout>

                <View
                    style="@style/line_dotted"
                    android:layout_marginBottom="4dp"
                    android:visibility="visible" />
            </LinearLayout>

            <!--生日-->
            <LinearLayout
                android:id="@+id/lin_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_style7"
                        android:layout_weight="1"
                        android:text="生日" />

                    <TextView
                        android:id="@+id/tv_birth"
                        style="@style/text_style7"
                        android:text="2002-01-01"
                        android:textColor="@color/base_text1"

                        />

                    <ImageView style="@style/image1" />

                </LinearLayout>

                <View
                    style="@style/line_dotted"
                    android:layout_marginBottom="4dp"
                    android:visibility="invisible" />
            </LinearLayout>


            <!--学生信息-->
            <LinearLayout
                android:id="@+id/lin_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--年级-->
                <LinearLayout
                    android:id="@+id/lin_grad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:layout_weight="1"
                            android:text="年级" />

                        <TextView
                            android:id="@+id/tv_grad"
                            style="@style/text_style7"
                            android:text="四年级"
                            android:textColor="@color/base_text1"

                            />

                        <ImageView style="@style/image1" />

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
                <!--学校-->
                <LinearLayout
                    android:id="@+id/lin_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:layout_weight="1"
                            android:text="学校" />

                        <TextView
                            android:id="@+id/tv_shool"
                            style="@style/text_style7"
                            android:text="上海复旦"
                            android:textColor="@color/base_text1"

                            />

                        <ImageView style="@style/image1" />

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!--城市-->
                <LinearLayout
                    android:id="@+id/lin_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:layout_weight="1"
                            android:text="城市" />

                        <TextView
                            android:id="@+id/tv_city"
                            style="@style/text_style7"
                            android:text="上海"
                            android:textColor="@color/base_text1"

                            />

                        <ImageView style="@style/image1" />

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
                <!--关联手机号-->
                <LinearLayout
                    android:id="@+id/lin_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:layout_weight="1"
                            android:text="关联手机号" />

                        <TextView
                            android:id="@+id/tv_contact"
                            style="@style/text_style7"
                            android:text="13540354597"
                            android:textColor="@color/base_text1" />

                        <ImageView style="@style/image1" />

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!--分享下载APP-->
                <LinearLayout
                    android:id="@+id/lin_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            style="@style/text_style7"
                            android:layout_weight="1"
                            android:text="分享下载APP" />

                        <TextView
                            android:id="@+id/tv_share"
                            style="@style/text_style7"
                            android:text="可获得10兔币"
                            android:textColor="@color/base_text1" />

                        <ImageView style="@style/image1" />

                    </LinearLayout>

                    <View
                        style="@style/line_dotted"
                        android:layout_marginBottom="4dp"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_sure"
                style="@style/button1"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/circle_button_blue_r10"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>