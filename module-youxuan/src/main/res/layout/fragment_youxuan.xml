<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_style2"
            android:layout_marginLeft="16dp"
            android:text="学思兔"

            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/icon_personal" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--banner-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@mipmap/banner_1"
                android:orientation="vertical">

            </LinearLayout>

            <!--标题1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style2"
                    android:layout_marginLeft="16dp"
                    android:text="晚辅陪伴课"

                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/icon_more" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <!--语文-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/wanfu_chinese" />

                    <TextView
                        style="@style/text_style3"
                        android:text="语文陪伴" />

                    <TextView
                        style="@style/text_style4"
                        android:text="17:00-20:00" />

                </LinearLayout>
                <!--数学-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/wanfu_math" />

                    <TextView
                        style="@style/text_style3"
                        android:text="数学陪伴" />

                    <TextView
                        style="@style/text_style4"
                        android:text="17:00-20:00" />

                </LinearLayout>
                <!--英语-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/wanfu_english" />

                    <TextView
                        style="@style/text_style3"
                        android:text="英语陪伴" />

                    <TextView
                        style="@style/text_style4"
                        android:text="17:00-20:00" />

                </LinearLayout>


            </LinearLayout>


            <!--标题2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style2"
                    android:layout_marginLeft="16dp"
                    android:text="智two·1对1互动课"

                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/icon_more" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_hudong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

            <!--标题3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style2"
                    android:layout_marginLeft="16dp"
                    android:text="多人精品互动课"

                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/icon_more" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lin_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"></LinearLayout>


                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tv_title"
                        style="@style/text_style3"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="更多热门课程" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/icon_next" />


                </LinearLayout>

                <com.lib.fastkit.views.viewpager.my.ViewPagerForScrollView
                    android:id="@+id/contentViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible"

                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>